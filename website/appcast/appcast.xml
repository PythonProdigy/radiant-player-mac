---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:sparkle="http://www.andymatuschak.org/xml-namespaces/sparkle" xmlns:dc="http://purl.org/dc/elements/1.1/">
    <channel>
        <title>Radiant Player Changelog</title>
        <link>https://radiant-player.github.io/radiant-player-mac/appcast/appcast.xml</link>
        <description>Most recent changes with links to updates.</description>
        <language>en</language>

        {% for release in site.categories.release %}
          <item>
            <title>{{ release.title | xml_escape }}</title>
            <sparkle:releaseNotesLink>
                {{ site.url }}{{ site.baseurl }}{{ release.url }}
            </sparkle:releaseNotesLink>
            <pubDate>{{ release.date | date_to_rfc822 }}</pubDate>
            <enclosure
                url="https://github.com/radiant-player/radiant-player-mac/releases/download/v{{ release.version }}/Radiant.Player.zip"
                sparkle:version="{{ release.version }}"
                length="{{ release.download_length }}"
                type="application/octet-stream"
                sparkle:dsaSignature="{{ release.download_signature }}"
            />
            <sparkle:minimumSystemVersion>{{ release.minimum_system_version | default: '10.9' }}</sparkle:minimumSystemVersion>
          </item>
        {% endfor %}
    </channel>
</rss>
